<resources>

    <style name="Theme.ABNDP2byNoorAlMashhadani" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/buttons_color</item>
        <item name="colorButtonNormal">@color/buttons_color</item>
    </style>

    <style name="game_name_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textSize">55sp</item>
    </style>

    <style name="game_description_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="dividing_lines_style">
        <item name="android:background">@color/lines_color</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="players_names_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="players_scores_style">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="game_result_style">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttons_style">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/buttons_color</item>
        <item name="android:textColor">@color/buttons_text_color</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:minHeight">50dp</item>
    </style>
</resources>